<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>
      {% if request.page_type == 'index' %}
        Premium Fashion Clothing for Men & Women | Klyora Official Store
      {% else %}
        {{ page_title }} | Klyora
      {% endif %}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% else %}
      <meta name="description" content="Shop premium fashion clothing at Klyora. Discover luxury-quality outfits with modern designs, fast delivery, and secure checkout.">
    {% endif %}

    <meta name="keywords" content="premium clothing, luxury fashion, online fashion store, designer wear, modern outfits">

    <!-- Social Meta Tags -->
    <meta property="og:site_name" content="{{ shop.name }}">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:title" content="{{ page_title }}">
    <meta property="og:type" content="website">
    <meta property="og:description" content="{{ page_description | default: shop.description | default: shop.name }}">

    {% if page_image %}
      <meta property="og:image" content="http:{{ page_image | img_url: 'master' }}">
      <meta property="og:image:secure_url" content="https:{{ page_image | img_url: 'master' }}">
      <meta property="og:image:width" content="{{ page_image.width }}">
      <meta property="og:image:height" content="{{ page_image.height }}">
    {% elsif product.featured_image %}
      <meta property="og:image" content="http:{{ product.featured_image | img_url: 'master' }}">
      <meta property="og:image:secure_url" content="https:{{ product.featured_image | img_url: 'master' }}">
    {% endif %}

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ page_title }}">
    <meta name="twitter:description" content="{{ page_description | default: shop.description | default: shop.name }}">

    <!-- Schema.org Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "sameAs": [
          "https://instagram.com/klyora",
          "https://tiktok.com/@klyora"
        ],
        "description": "Maison Klyora is a premium digital boutique offering curated luxury silhouettes."
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "{{ shop.url }}/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <!-- LCP Optimization: Preload Hero Image -->
    <link rel="preload" as="image" href="https://images.unsplash.com/photo-1515372039744-b8f02a3ae446?q=80&w=2070&auto=format&fit=crop">

    {{ content_for_header }}

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Inter:wght@200;300;400;500;600&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #000000;
        color: #ffffff;
        letter-spacing: -0.01em;
        overflow-x: hidden;
        -webkit-font-smoothing: antialiased;
      }
      .font-serif {
        font-family: 'Playfair Display', serif;
      }
      
      @keyframes slideInRight {
        from { transform: translateX(100%); }
        to { transform: translateX(0); }
      }
      .animate-slide-right {
        animation: slideInRight 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      }

      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
      }

      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .animate-fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
      }
      
      .no-scrollbar::-webkit-scrollbar { display: none; }
      
      .editorial-heading {
        font-size: clamp(3rem, 10vw, 9rem);
        line-height: 0.85;
        font-weight: 300;
        text-transform: uppercase;
      }

      .checkout-input {
        width: 100%;
        background: transparent;
        border-bottom: 1.5px solid rgba(255,255,255,0.08);
        padding: 1.25rem 0;
        font-size: 12px;
        text-transform: uppercase;
        color: white;
        letter-spacing: 0.25em;
        outline: none;
        transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
      }
      .checkout-input:focus {
        border-bottom-color: #fff;
        padding-left: 0.5rem;
      }
      .checkout-input::placeholder {
        color: #444;
        font-weight: 300;
      }

      @keyframes fadeInScale {
        from { opacity: 0; transform: translateY(40px) scale(1.05); }
        to { opacity: 1; transform: translateY(0) scale(1); }
      }
      .animate-fade-scale {
        animation: fadeInScale 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        will-change: transform, opacity;
      }

      .parallax-layer {
        will-change: transform;
        backface-visibility: hidden;
        transform: translateZ(0);
      }

      .luxury-zoom {
        transition: transform 2s cubic-bezier(0.16, 1, 0.3, 1);
      }
      .luxury-zoom:hover {
        transform: scale(1.1);
      }

      /* Noir Shimmer Placeholder Animation */
      @keyframes shimmer {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
      }
      .skeleton-noir {
        background: linear-gradient(90deg, #050505 25%, #151515 50%, #050505 75%);
        background-size: 200% 100%;
        animation: shimmer 2s infinite linear;
      }
      
      .image-reveal {
        opacity: 0;
        transition: opacity 1.5s cubic-bezier(0.16, 1, 0.3, 1);
      }
      .image-reveal.loaded {
        opacity: 1;
      }

      /* AR Try-On Shimmer Scan */
      @keyframes ar-shimmer {
        0% { transform: translateX(-150%) skewX(-30deg); }
        50% { transform: translateX(150%) skewX(-30deg); }
        100% { transform: translateX(150%) skewX(-30deg); }
      }
      .ar-scan-effect {
        position: relative;
        overflow: hidden;
      }
      .ar-scan-effect::after {
        content: '';
        position: absolute;
        top: 0;
        left: -50%;
        width: 100%;
        height: 100%;
        background: linear-gradient(to right, transparent, rgba(140, 166, 122, 0.4), rgba(140, 166, 122, 0.6), rgba(140, 166, 122, 0.4), transparent);
        animation: ar-shimmer 2.5s infinite cubic-bezier(0.4, 0, 0.2, 1);
      }

      @keyframes pulse-ring {
        0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(140, 166, 122, 0.7); }
        70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(140, 166, 122, 0); }
        100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(140, 166, 122, 0); }
      }
      .animate-pulse-glimmer:hover {
        animation: pulse-ring 2s infinite;
      }
    </style>

    <script>
      window.KlyoraConfig = {
        shopName: "{{ shop.name }}",
        shopUrl: "{{ shop.url }}",
        currency: "{{ cart.currency.iso_code }}",
        products: [
          {%- for product in collections.all.products limit: 50 -%}
            {
              id: "{{ product.id }}",
              shopifyId: "gid://shopify/Product/{{ product.id }}",
              handle: "{{ product.handle }}",
              name: "{{ product.title | escape }}",
              price: {{ product.price | divided_by: 100.0 }},
              description: {{ product.description | json }},
              descriptionHtml: {{ product.description | json }},
              category: "{%- if product.tags contains 'Men' -%}Men{%- elsif product.tags contains 'Women' -%}Women{%- else -%}Exclusive{%- endif -%}",
              image: "https:{{ product.featured_image | img_url: 'master' }}",
              images: [
                {%- for image in product.images -%}
                  "https:{{ image | img_url: 'master' }}"{%- unless forloop.last -%},{%- endunless -%}
                {%- endfor -%}
              ],
              variants: [
                {%- for variant in product.variants -%}
                  {
                    id: "{{ variant.id }}",
                    title: "{{ variant.title | escape }}",
                    price: {{ variant.price | divided_by: 100.0 }},
                    available: {{ variant.available }}
                  }{%- unless forloop.last -%},{%- endunless -%}
                {%- endfor -%}
              ],
              relatedIds: [], // Populated by AI or Tags in future
              shippingTier: "Global Tracked (7-15 Days)",
              composition: "Premium Source",
              rating: 4.8,
              reviews: 0
            }{%- unless forloop.last -%},{%- endunless -%}
          {%- endfor -%}
        ]
      };
    </script>

  <body class="gradient">
    <noscript>
      <div style="padding: 40px; text-align: center; color: white; background: #000;">
        <h1>Premium Fashion Clothing Designed for Modern Style</h1>
        <p>Shop premium fashion clothing at Klyora. Discover luxury-quality outfits with modern designs, fast delivery, and secure checkout.</p>
        <h2>The Maison Philosophy</h2>
        <p>
           Welcome to Maison Klyora, a digital sanctuary dedicated to the art of the premium silhouette. 
           Our atelier curators travel the virtual globe to select only the finest materials, ensuring that every view reveals a new detail of uncompromised luxury.
           We believe that style is an architectural pursuit. From the drape of a wool coat to the structure of a tailored blazer, 
           every piece in our collection is chosen to enhance your personal narrative.
        </p>
        <a href="/collections/all" style="color: white; text-decoration: underline;">Explore Our Premium Clothing Collection</a>
      </div>
    </noscript>
    <!-- Klyora React App Assets -->
    <link rel="stylesheet" href="{{ 'klyora.css' | asset_url }}">
    <script src="{{ 'klyora.js' | asset_url }}" type="module" defer></script>

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      <!-- React App Mount Point -->
      <div id="klyora-root"></div>

      <!-- Critical Hero (LCP Optimization) -->
      <style>
        #critical-hero { display: none; }
        #klyora-root:empty + #critical-hero { display: flex; }
      </style>
      <div id="critical-hero" class="relative h-[100vh] w-full overflow-hidden items-center justify-center bg-black">
        <img 
          src="https://images.unsplash.com/photo-1515372039744-b8f02a3ae446?q=80&w=2070&auto=format&fit=crop" 
          alt="Maison Klyora Critical Hero" 
          class="absolute inset-0 w-full h-full object-cover opacity-40"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-transparent to-black"></div>
        <div class="relative z-10 text-center px-6">
          <span class="text-[9px] uppercase tracking-[1.2em] text-white/30 block mb-12">MAISON KLYORA</span>
          <h1 class="editorial-heading font-serif tracking-tighter mb-16 text-white/90 text-4xl md:text-6xl lg:text-7xl">
            Premium Fashion <br /> <span class="italic">Designed for Modern Style</span>
          </h1>
          <div class="flex flex-col md:flex-row justify-center items-center gap-12 opacity-0"> <!-- Hidden buttons to match layout but not interactive -->
             <div class="px-20 py-7 bg-white text-black text-[9px] font-bold uppercase tracking-[0.5em]">AI Concierge</div>
          </div>
        </div>
      </div>
      
      <!-- Fallback for non-JS or Sections -->
      <div id="shopify-section-fallback" style="display: none;">
        {{ content_for_layout }}
      </div>
    </main>
  </body>
</html>

{% capture email_title %}Your order is on its way{% endcapture %}
{% capture email_body %}
  <p style="font-family: 'Times New Roman', Times, serif; font-size: 16px; line-height: 1.6; color: #333;">
    Dear {{ customer.first_name }},
  </p>
  <p style="font-family: 'Times New Roman', Times, serif; font-size: 16px; line-height: 1.6; color: #333;">
    We are pleased to inform you that your selection has been dispatched.
  </p>
  <p style="font-family: 'Times New Roman', Times, serif; font-size: 16px; line-height: 1.6; color: #333;">
    The item is currently making its way to you. You may track its progress below to prepare for its arrival.
  </p>
{% endcapture %}

<!DOCTYPE html>
<html lang="en">
  <head>
  <title>{{ email_title }}</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width">
  <style>
    body { margin: 0; padding: 0; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; }
    img { height: auto; line-height: 100%; outline: none; text-decoration: none; display: block; }
    p { margin: 1em 0; }
  </style>
</head>
<body style="background-color: #ffffff; padding: 40px 0;">
  <table border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 600px; margin: 0 auto; border-collapse: collapse;">
    
    <!-- HEADER -->
    <tr>
      <td align="center" style="padding: 40px 0 20px 0;">
        <span style="font-family: 'Times New Roman', Times, serif; font-size: 32px; letter-spacing: 0.1em; font-weight: bold; font-style: italic; color: #000;">K LY O R A</span>
      </td>
    </tr>
     <tr>
      <td align="center" style="padding-bottom: 40px; border-bottom: 1px solid #eee;">
        <span style="font-family: Helvetica, Arial, sans-serif; font-size: 10px; letter-spacing: 0.2em; text-transform: uppercase; color: #666;">Shipping Confirmation</span>
      </td>
    </tr>

    <!-- BODY -->
    <tr>
      <td style="padding: 40px 20px;">
        {{ email_body }}
        
        <!-- BUTTON -->
        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 30px 0;">
            <tr>
              <td align="center">
                <a href="{{ order_status_url }}" style="background-color: #000000; color: #ffffff; padding: 15px 30px; text-decoration: none; font-family: Helvetica, Arial, sans-serif; font-size: 11px; text-transform: uppercase; letter-spacing: 0.2em; border: 1px solid #000;">Track Your Package</a>
              </td>
            </tr>
        </table>
        {% if fulfillment.tracking_number %}
        <p style="text-align: center; font-family: Helvetica, Arial, sans-serif; font-size: 10px; color: #999; letter-spacing: 0.1em;">
            TRACKING NUMBER: {{ fulfillment.tracking_number }}
        </p>
        {% endif %}
      </td>
    </tr>

    <!-- ITEMS IN THIS SHIPMENT -->
    <tr>
      <td style="padding: 20px; background-color: #f9f9f9;">
        <p style="font-family: Helvetica, Arial, sans-serif; font-size: 10px; text-transform: uppercase; letter-spacing: 0.2em; color: #666; margin-bottom: 20px; text-align: center;">Items in this shipment</p>
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
          {% for line in fulfillment.fulfillment_line_items %}
          <tr>
            <td style="padding: 10px 0; border-bottom: 1px solid #eee;" width="60">
              {% if line.line_item.image %}
                <img src="{{ line.line_item | img_url: 'compact_cropped' }}" align="left" width="50" height="50" style="width:50px; height:50px; object-fit: cover;" />
              {% endif %}
            </td>
            <td style="padding: 10px 15px; border-bottom: 1px solid #eee;">
              <span style="font-family: 'Times New Roman', Times, serif; font-size: 14px; font-style: italic; color: #000; display: block;">{{ line.line_item.title }}</span>
            </td>
          </tr>
          {% endfor %}
        </table>
      </td>
    </tr>

    <!-- FOOTER -->
    <tr>
      <td align="center" style="padding-top: 40px; border-top: 1px solid #eee; margin-top: 40px;">
        <p style="font-family: Helvetica, Arial, sans-serif; font-size: 10px; color: #999; line-height: 1.5;">
          Thank you for choosing Klyora.<br>
          <a href="{{ shop.url }}" style="color: #000; text-decoration: none;">klyora.com</a>
        </p>
      </td>
    </tr>
  </table>
</body>
</html>
